@model IEnumerable<FinalProject.Models.ViewModel.UserInvoiceVM>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .invoice-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            padding: 20px;
            color: #333;
        }

        .company-header, .invoice-footer {
            text-align: center;
            margin-bottom: 20px;
        }

            .company-header h1 {
                margin: 0;
                color: #4CAF50;
                font-weight: bold;
            }

            .company-header p {
                margin: 5px 0;
                color: #666;
            }

        .invoice-header {
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            .invoice-header h2 {
                margin: 0;
                color: #FF9800;
                font-weight: bold;
                text-align: center;
            }

        .invoice-details {
            margin-bottom: 20px;
        }

            .invoice-details table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }

            .invoice-details th, .invoice-details td {
                padding: 15px; /* Increased padding for taller rows */
                border: 1px solid #ddd;
                text-align: center;
                font-weight: bold;
            }

            .invoice-details th {
                background-color: #4CAF50;
                color: #fff;
                text-align: center;
            }

            .invoice-details td {
                background-color: #f2f2f2;
            }

            .invoice-details .total-row td {
                border-bottom: 2px solid #ddd; /* Bottom border for total row */
            }

        .invoice-footer {
            font-weight: bold;
            text-align: right;
            color: #FF9800;
        }

        .signature-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
        }

        .signature {
            width: 45%;
            text-align: center;
            font-weight: bold;
            position: relative;
        }

        .signature-line {
            border-top: 1px solid #000;
            margin: 20px 0;
        }

        .customer-name {
            font-weight: bold;
            color: #4CAF50;
            margin-bottom: 10px;
            position: absolute;
            top: -30px;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="company-header">
            <h1>IsDB-BISEW</h1>
            <p>
                IDB Bhaban (4th Floor)
                E/8-A, Rokeya Sharani
                Sher-e-Bangla Nagar
                Dhaka-1207, Bangladesh
            </p>
            <p>Phones: +880 2 9183006 - 15 | Email: info@isdb-bisew.org</p>
            <p>"Your satisfaction, our priority!"</p>
        </div>

        <div class="invoice-header">
            <h2>Invoice</h2>
        </div>

        <div class="invoice-details">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.InvoiceId)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.InvoiceDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Payment)</th>
                        <th>@Html.DisplayNameFor(model => model.Bill)</th>
                        <th>@Html.DisplayNameFor(model => model.DeliveryCharge)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalBill)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.InvoiceId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Payment)</td>
                            <td>$@Html.DisplayFor(modelItem => item.Bill)</td>
                            <td>$@Html.DisplayFor(modelItem => item.DeliveryCharge)</td>
                            <td>$@Html.DisplayFor(modelItem => item.TotalBill)</td>
                        </tr>
                    }
                    <tr class="total-row">
                        <td colspan="6" style="text-align:right;">Total:</td>
                        <td>$@Model.Sum(item => item.TotalBill)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="signature-section">
            <div class="signature">
                <div class="customer-name">
                    @Html.DisplayFor(model => model.FirstOrDefault().Name)
                </div>
                <div class="signature-line"></div>
                Customer Signature
            </div>
            <div class="signature">
                <div class="signature-line"></div>
                Authorized Signature
            </div>
        </div>
    </div>
</body>
</html>
