@model FinalProject.Models.Photo

@if (Model != null && !string.IsNullOrEmpty(Model.ImagePath))
{
    <!-- _PhotoPartial.cshtml -->
    <div style=" width: 100%; height: 300px; overflow: hidden;">
        <img src="@Url.Content(Model.ImagePath)" alt="Photo Image" style="width: 100%; height: auto; object-fit: cover; z-index: 0;" />

        @if (User.Identity.IsAuthenticated && User.IsInRole("1"))
        {
            <a href="@Url.Action("Edit", "Photo", new { id = Model.Id })"
               class="btn btn-lg btn-success"
               style="position: absolute; left: 50%; transform: translate(-50%, -50%);
                  z-index: 1005;">
                Change this Photo
            </a>
        }
    </div>





}
else
{
    <img src="~/Uploads/IMG-20240403-WA0000.jpeg" />

}

